@model Le6pergram.Models.Picture

@{
    ViewBag.Title = "Delete picture";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="text-align: center">Are you sure you want to delete this picture?</h3>
<div style="text-align: center">
    <hr />
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="pictureIndex">                
                <img class="imgIndex" src="data:image;base64,@System.Convert.ToBase64String(Model.Content)" onclick="location.href='../../Pictures/Details/' + @Model.Id" />
            </div>
        </div>
        <div class="col-sm-12"></div>
    </div>
    <hr />    

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" id="deletePictureSubmit"/>
            @Html.ActionLink("Go back", "Details/" + Model.Id, "Pictures", htmlAttributes: new { @class = "btn btn-default" })
        </div>
    }
</div>

<script src="~/Scripts/jquery-3.1.1.js"></script>
<script>$('#deletePictureSubmit').click(function () { $(document).ready(function () { $('#deletePictureSubmit').attr("disabled", true); }) })</script>